<Window x:Class="MYB_NEW.EditncomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="LightGray" Title="Income Page" Height="170" Width="280">
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Title of income" Margin="40,0,15,58" FontWeight="Bold" Grid.RowSpan="2" Grid.Row="1"/>
        <TextBox x:Name="IncomeTextBox"  Grid.Row="0" Margin="132,25,48,18" Width="100" Background="White" BorderBrush="Black" BorderThickness="0" Grid.RowSpan="2"/>

        <TextBlock Text="Projected income" Grid.Row="2" Margin="29,8,-9,20" FontWeight="Bold"/>
        <TextBox x:Name="ProjectedIncomeTextBox"  Grid.Row="1" Margin="132,31,48,29" Height="16" Width="100" Background="White" BorderBrush="Black" BorderThickness="0" Grid.RowSpan="2"/>

        <Button Content="Save" Grid.Row="2" Width="100" HorizontalAlignment="Center" Margin="0,52,0,-14" BorderThickness="0" Background="#515151" Foreground="White" FontWeight="DemiBold"/>
    </Grid>
</Window>
