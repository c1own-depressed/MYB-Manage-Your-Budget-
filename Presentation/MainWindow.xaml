    <Grid x:Name="GridForButtons">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="400"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Manage Your Budget" 
               FontSize="90" 
               FontFamily="{StaticResource Inter}"
               FontWeight="Bold"
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" IsEnabled="False"/>
        <!--Orientation="Vertical"-->
        <Grid Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Log in" Width="475" Height="104" Margin="10,10,10,0" FontSize="64" Foreground="White" Background="#6E6E6E" Click="LogInButton_Click" Style="{StaticResource RoundedButtonStyle}" VerticalAlignment="Top" />
            <Button Grid.Row="1" Content="Sign up" Width="475" Height="104" Margin="10,50,10,10" FontSize="64" Foreground="White" Background="#6E6E6E" Click="SignUpButton_Click" Style="{StaticResource RoundedButtonStyle}"/>


        </Grid>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>


</Window>

