<Window x:Class="MYB_NEW.EditSavingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="LightGray" Title="Income Page" Height="170" Width="280">
    <Grid  Margin="0,0,0,1" Background="{DynamicResource Back}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Title of savings" Margin="40,0,15,58" FontWeight="Bold" Grid.RowSpan="2" Grid.Row="1" Foreground="{DynamicResource Text}"/>
        <TextBox x:Name="TitleOfSavingsTextBox" Grid.Row="0" Margin="132,25,48,18" Width="100" Background="White" BorderBrush="Black" BorderThickness="0" Grid.RowSpan="2"/>

        <TextBlock Text="Amount of savings" Grid.Row="2" Margin="24,8,-9,20" FontWeight="Bold" Foreground="{DynamicResource Text}"/>
        <TextBox x:Name="AmmountOfSavingsTextBox" Grid.Row="1" Margin="132,31,48,29" Height="16" Width="100" Background="White" BorderBrush="Black" BorderThickness="0" Grid.RowSpan="2"/>

        <Button Content="Save" Grid.Row="2" Width="100" HorizontalAlignment="Center" Margin="0,52,0,-14" BorderThickness="0" Background="{DynamicResource Button}" Foreground="{DynamicResource Text}" FontWeight="DemiBold"/>
    </Grid>
</Window>
