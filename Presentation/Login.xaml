<Page x:Class="Presentation.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Height="720" Width="1080"
      Title="Login">

    <Grid Background="#D9D9D9">

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="360"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"  Margin="20">
            <Button Name="btnBack" Content="Back" Click="btnBack_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#D9D9D9" BorderThickness="0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="back_icon.png" Width="48" Height="48" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <TextBlock Text="Back" FontWeight="Bold" FontSize="36"   TextAlignment="Left" VerticalAlignment="Top" />
        </StackPanel>

        <TextBlock Text="Log in" 
                   FontSize="70" 
                   FontWeight="Bold"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" IsEnabled="False" Width="300"/>

        <Label Grid.Row="1" Margin="0,55,0,0" Width="500" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Enter your Username" FontSize="21" FontWeight="Bold" />
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Margin="0,100,0,0" Width="500" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Text=""  />

        <Label Grid.Row="1" Margin="0,155,0,0" Width="500" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Enter your Password" FontSize="21" FontWeight="Bold" />

        <PasswordBox x:Name="PasswordTextBox" Grid.Row="1"  Margin="0,195,0,0" Width="500" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32"  />

        <Button  Grid.Row="2" Content="Log in" Width="430" Height="90" VerticalAlignment="Top" FontSize="54" Foreground="White" Background="#6E6E6E" Margin="302,36,302,0" Click="Button_Click" />
        <!--<CheckBox x:Name="checkBox" Content="Remember me"  HorizontalAlignment="Center" Margin="0,280,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" Height="24" Width="164" FontSize="14" />-->
    </Grid>
</Page>
