<Window x:Class="Presentation.DeleteSavingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:rs="clr-namespace:Presentation"
      Background="LightGray" Title="Income Page" Height="170" Width="280">
    <Grid  Margin="0,0,0,1" Background="{DynamicResource Back}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="DeleteSavingsPageTextBox" Text="{x:Static rs:Resources.AYS}"
           Grid.Row="2" Margin="0,31,0,-24" FontWeight="DemiBold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Width="126" Foreground="{DynamicResource Text}"/>

        <Button Content="{x:Static rs:Resources.Btn_Cancel}" Grid.Row="2" Width="100" HorizontalAlignment="Left" Margin="33,101,0,-56" BorderThickness="0" Background="{DynamicResource Button}" Foreground="{DynamicResource Text}" FontWeight="DemiBold" Click="Button_Click"/>
        <Button Content="{x:Static rs:Resources.Btn_Delete}" Grid.Row="2" Width="100" HorizontalAlignment="Left" Margin="162,101,0,-56" BorderThickness="0" Background="{DynamicResource Button}" Foreground="{DynamicResource Text}" FontWeight="DemiBold" Click="Button_Click_1"/>
    </Grid>
</Window>
