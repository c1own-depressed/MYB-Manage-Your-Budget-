<Window x:Class="MYB_NEW.EditExpensePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:rs="clr-namespace:Presentation"
      Background="LightGray" Title="Income Page" Height="170" Width="280">
    <Grid  Margin="0,0,0,1" Background="{DynamicResource Back}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static rs:Resources.TitleOfExpense}" Margin="40,0,15,58" FontWeight="Bold" Grid.RowSpan="2" Grid.Row="1" Foreground="{DynamicResource Text}"/>
        <TextBox Grid.Row="0" Margin="132,25,48,18" Width="100" Background="White" BorderBrush="Black" BorderThickness="0" Grid.RowSpan="2"/>

        <TextBlock Text="{x:Static rs:Resources.PlannedBudget}" Grid.Row="2" Margin="34,8,-9,20" FontWeight="Bold" Foreground="{DynamicResource Text}"/>
        <TextBox Grid.Row="1" Margin="132,31,48,29" Height="16" Width="100" Background="White" BorderBrush="Black" BorderThickness="0" Grid.RowSpan="2" />

        <Button Content="{x:Static rs:Resources.Btn_edit}" Grid.Row="2" Width="100" HorizontalAlignment="Center" Margin="0,52,0,-14" BorderThickness="0" Background="{DynamicResource Button}" Foreground="{DynamicResource Text}" FontWeight="DemiBold"/>
    </Grid>
</Window>
